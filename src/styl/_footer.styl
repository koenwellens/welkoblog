.comments
    center(rem(800px))
    padding 0 rem(20px)
    h3
        margin 0 0 rem(30px)
        font-size rem(30px)

footer
    center(rem(800px))
    border-top 1px solid darken(themeBrown, 10%)
    background themeBrown
    padding rem(20px) rem(25px)
    margin-top rem(50px)
    margin-bottom rem(40px)
    mainFont(300)
    +above(cut)
        margin-top rem(100px)
    p
        text-decoration none
        color accentDark
        font-size rem(16px)
        line-height rem(25px)
    span
        font-weight 700
    svg
        size(28,28)
        display inline-block
        vertical-align middle
        margin-right rem(10px)
        +above(cut)
            margin-right rem(20px)
        &.love
            size(20,20)
            fill themeColor
            margin-top rem(-2px)
            margin-left rem(3px)
            margin-right rem(3px)
    a
        fill accentDark
        transition all .3s ease
        text-decoration none
        color accentDark
        &:hover
            fill themeColor
        &.creator:hover
            text-decoration underline

    .footer-links
        display: flex
        justify-content: space-around
        padding 0
        list-style-type none
        li
            margin-bottom rem(10px)
        a
            text-decoration none
            font-size rem(15px)
            &:hover
                text-decoration underline

    .footer-text
        display: flex
        justify-content: space-around
        padding 0
        list-style-type none
        li
            margin-bottom rem(10px)
        a
            text-decoration none
            font-size rem(15px)
            &:hover
                text-decoration underline

.main-page
    footer
        background primaryDark
        border-top 1px solid lighten(primaryDark, 10%)
        p
            color accentDark
